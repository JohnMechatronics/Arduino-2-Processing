/*
   John Wild

   Sending an integer as a String to Processing
   An integer must be a number between 2147483647 and -2147483648
   Processing recieve code below
*/

void setup() 
{
Serial.begin(9600);
}

void loop()
{
Serial.println("-2147483648"); // a number between 2147483647 and -2147483648
delay(200);
}

/*
