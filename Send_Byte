/*
 * John Wild
 * 
 * Sending data as a byte to Processing
 * Because bytes are only 8 bits the can only contain a value from 0-255
 * Processing recieve code below
 *
 */


void setup()
{
  Serial.begin(9600);
}
byte myByte=255; // Can send data between 0-255
void loop()
{
   Serial.write(myByte);
 }   

